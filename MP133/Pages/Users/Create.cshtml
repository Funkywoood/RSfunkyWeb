@page
@model MP133.Pages.Users.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Erstellen</h1>

<h4>Kontaktdaten</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post" class="create-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div style="display: flex; gap: 50px;">
                <div style="flex: 1;">
                    <label asp-for="Mitarbeiter.Vorname" class="control-label">Vorname</label>
                    <input asp-for="Mitarbeiter.Vorname" class="form-control" />
                    <span asp-validation-for="Mitarbeiter.Vorname" class="text-danger"></span>
                </div>
                <div style="flex: 1;">
                    <label asp-for="Mitarbeiter.Name" class="control-label">Name</label>
                    <input asp-for="Mitarbeiter.Name" class="form-control" />
                    <span asp-validation-for="Mitarbeiter.Name" class="text-danger"></span>
                </div>
            </div>
            <div style="display: flex; gap: 50px;">
                <div style="flex: 1; display: flex; flex-direction: column;">
                    <label asp-for="Mitarbeiter.Strasse" class="control-label">Straße</label>
                    <input asp-for="Mitarbeiter.Strasse" class="form-control" />
                    <span asp-validation-for="Mitarbeiter.Strasse" class="text-danger"></span>
                </div>
                <div style="flex: 1; display: flex; flex-direction: column;">
                    <label asp-for="Mitarbeiter.Nr" class="control-label">Nr</label>
                    <input asp-for="Mitarbeiter.Nr" class="form-control" />
                    <span asp-validation-for="Mitarbeiter.Nr" class="text-danger"></span>
                </div>
            </div>
            <div style="display: flex; gap: 50px;">
                <div style="flex: 1; display: flex; flex-direction: column;">
                    <label asp-for="Mitarbeiter.PLZ" class="control-label">PLZ</label>
                    <input asp-for="Mitarbeiter.PLZ" class="form-control" />
                    <span asp-validation-for="Mitarbeiter.PLZ" class="text-danger"></span>
                </div>
                <div style="flex: 1; display: flex; flex-direction: column;">
                    <label asp-for="Mitarbeiter.Ort" class="control-label">Ort</label>
                    <input asp-for="Mitarbeiter.Ort" class="form-control" />
                    <span asp-validation-for="Mitarbeiter.Ort" class="text-danger"></span>
                </div>
            </div>
            <div style="display: flex; gap: 50px;">
                <div style="flex: 1; display: flex; flex-direction: column;">
                    <label asp-for="Mitarbeiter.Email" class="control-label">Email</label>
                    <input asp-for="Mitarbeiter.Email" class="form-control" />
                    <span asp-validation-for="Mitarbeiter.Email" class="text-danger"></span>
                </div>
                <div style="flex: 1; display: flex; flex-direction: column;">
                    <label asp-for="Mitarbeiter.Telefon" class="control-label">Telefon</label>
                    <input asp-for="Mitarbeiter.Telefon" class="form-control" type="tel" pattern="[0-9]*" />
                    <span asp-validation-for="Mitarbeiter.Telefon" class="text-danger"></span>
                </div>
            </div>
            <div style="display: flex; gap: 50px;">
                <div style="flex: 1; display: flex; flex-direction: column;">
                    <label asp-for="Mitarbeiter.Passwort" class="control-label">Passwort</label>
                    <div class="input-group">
                        <input asp-for="Mitarbeiter.Passwort" class="form-control" type="password" id="password" />
                        <span class="input-group-text" id="togglePassword">
                            <i class="fas fa-eye"></i>
                        </span>
                    </div>
                    <span asp-validation-for="Mitarbeiter.Passwort" class="text-danger"></span>
                </div>
                <div style="flex: 1; display: flex; flex-direction: column;">
                    <label asp-for="Mitarbeiter.PasswortBestätigen" class="control-label" style="white-space: nowrap;">Passwort Bestätigen</label>
                    <div class="input-group">
                        <input asp-for="Mitarbeiter.PasswortBestätigen" class="form-control" type="password" id="passwordConfirm" />
                        <span class="input-group-text" id="togglePasswordConfirm">
                            <i class="fas fa-eye"></i>
                        </span>
                    </div>
                    <span asp-validation-for="Mitarbeiter.PasswortBestätigen" class="text-danger"></span>
                </div>
            </div>
           <div style="margin-top: 20px;">
                <div class="form-group-buttons">
                 <input type="submit" value="Erstellen" class="btn btn-primary" />
        |
                <a asp-page="./Index" style="text-decoration: none;">Zurück zur Liste</a>
                </div>
           </div>

        </form>
    </div>
</div>

<script>
    document.getElementById("togglePassword").addEventListener("click", function () {
        const passwordField = document.getElementById("password");
        const type = passwordField.getAttribute("type") === "password" ? "text" : "password";
        passwordField.setAttribute("type", type);

        const icon = this.querySelector("i");
        if (type === "password") {
            icon.classList.replace("fa-eye-slash", "fa-eye");
        } else {
            icon.classList.replace("fa-eye", "fa-eye-slash");
        }
    });

    document.getElementById("togglePasswordConfirm").addEventListener("click", function () {
        const passwordConfirmField = document.getElementById("passwordConfirm");
        const type = passwordConfirmField.getAttribute("type") === "password" ? "text" : "password";
        passwordConfirmField.setAttribute("type", type);

        const icon = this.querySelector("i");
        if (type === "password") {
            icon.classList.replace("fa-eye-slash", "fa-eye");
        } else {
            icon.classList.replace("fa-eye", "fa-eye-slash");
        }
    });
</script>

