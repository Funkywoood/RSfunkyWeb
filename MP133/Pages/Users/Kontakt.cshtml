@page
@model MP133.Pages.Users.KontaktModel
@{
    ViewData["Title"] = "Kontaktformular";
}

<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>@ViewData["Title"]</title>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
</head>
<body>
    <h1>Kontaktformular</h1>
    <div class="container">
        <form method="post" id="contact-form">
            <div class="form-group-wrapper" style="display: flex; gap: 20px;">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="Form.Name" class="form-control" value="@Model.Form?.Name" required>
                </div>
                <div class="form-group">
                    <label for="subject">Betreff:</label>
                    <input type="text" id="subject" name="Form.Betreff" class="form-control" value="@Model.Form?.Betreff"required>
                </div>
            </div>
            <div class="form-group-wrapper" style="display: flex; gap: 20px;">
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="Form.Email" class="form-control" value="@Model.Form?.Email"required>
                </div>
                <div class="form-group">
                    <label for="message">Nachricht:</label>
                    <textarea id="message" name="Form.Message" class="form-control" rows="5" required>@Model.Form?.Message</textarea>
                </div>

            </div>
            <div class="captcha-container" style="display: flex; gap: 20px;">
                <div class="form-group">
                    <div class="g-recaptcha" data-sitekey="@Model.ReCaptchaSiteKey"></div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Senden</button>
                </div>
            </div>
        </form>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                @TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Error"]
            </div>
        }
    </div>
</body>
</html>
